<%= render 'shared/header'%>

<%=form_with model: [@team, @list, @task], url: team_list_tasks_path(@team, @list), local: true do |f|%>
<div class="form-wrap">
<%= render 'shared/error_messages', model: f.object %>
  <div class="form-header">
    <div class="title_bdash">
      <h4><span class="task-bdash">「Task-Bdash」</span></h4>
      <link href="https://fonts.googleapis.com/css2?family=Londrina+Shadow&display=swap" rel="stylesheet">
    </div>
    <h2 class="form-header-text">
      タスク作成
    </h2>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :タスク名, class:"form-text" %><br />
      <%= f.text_field :task_name, class:"input-field", id:"task_name", placeholder:"20文字以内で入力してください", autofocus: true, autocomplete: "task_name" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :タスク内容, class:"form-text" %><br />
      <%= f.text_area :content, class:"info-field", id:"content", placeholder:"タスク内容(文字制限:1000)", rows:"7" ,maxlength:"1000" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :タスク完了目標日時, class:"form-text" %><br />
      <%= f.datetime_field :target_date, class: 'date-select' %>
    </div>
  </div>
  <div class="actions">
      <%= f.submit "タスク作成", class:"devise-btn" %>
  </div>
  <%= link_to '戻る', :back%>
</div>
<% end %>