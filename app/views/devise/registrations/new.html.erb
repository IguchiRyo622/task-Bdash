<div class="explannation">
  「TaskBdash」にはアカウントが必要になります<br>
  下記フォームからアカウントを作成してください
</div>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <div class="title_bdash">
      <h4>ようこそ<span class="task-bdash">「TaskBdash」</span>へ</h4>
    </div>
    <h2 class="form-header-text">
      アカウント作成
    </h2>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
    <%= f.label :ニックネーム, class:"form-text" %><br />
    <%= f.text_field :nickname, class:"input-field", id:"nickname", placeholder:"ニックネーム", maxlength:"40", autofocus: true, autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <%= f.label :メールアドレス, class:"form-text" %><br />
      <%= f.email_field :email, class:"input-field", placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <%= f.label :パスワード, class:"form-text" %><br />
      <%= f.password_field :password, class:"input-field", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード(確認)</label><br />
      <%= f.password_field :password_cofrimation, class:"input-field", placeholder:"同じパスワードを入力してください", autocomplete: "new-password" %>
    </div>
  </div>
  <div class="actions">
      <%= f.submit "アカウント登録", class:"devise-btn" %>
  </div>
</div>
<% end %>