<%= render 'shared/header'%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="form-wrap-team">
  <%= render 'shared/error_messages', model: f.object %>
    <div class="form-header">
      <div class="title_bdash">
        <h4><span class="task-bdash">「Task-Bdash」</span></h4>
        <link href="https://fonts.googleapis.com/css2?family=Londrina+Shadow&display=swap" rel="stylesheet">
      </div>
      <h2 class="form-header-text">
        ユーザー編集
      </h2>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
      <%= f.label :ニックネーム, class:"form-text" %><br />
      <%= f.text_field :nickname, class:"input-field", id:"nickname", placeholder:"ニックネーム", autofocus: true, autocomplete: "nickname" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
      <%= f.label :ユーザーID, class:"form-text" %><br />
      <%= f.text_field :user_name, class:"input-field", id:"user_name", placeholder:"他のユーザーに公開されます(英数字混合)", autocomplete: "user_name" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
      <%= f.label :ユーザー情報, class:"form-text" %><br />
      <%= f.text_area :profile, class:"info-field", id:"profile", placeholder:"自己紹介にお使いください(文字制限:1000)", rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "編集", class:"devise-btn" %>
    </div>

<% end %>

<%= link_to "戻る", :back %>