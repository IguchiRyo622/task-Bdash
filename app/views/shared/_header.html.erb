<header class="top-page-header">
  <div class="header-top">
      <%= link_to 'Task-Bdash', "/", class:'header-bdash'%>
      <link href="https://fonts.googleapis.com/css2?family=Londrina+Shadow&display=swap" rel="stylesheet">
    <div class='nav'>
      <ul class='lists-right'>
        <% if user_signed_in? %>
          <li class="search">
            <%= form_with(url: search_users_path, local: true, method: :get) do |f| %>
              <%= f.text_field :keyword, placeholder: '友達を探す', class: "search-field" %>
              <%= f.submit "検索" %>
            <% end %>
          </li>
          <li><%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>