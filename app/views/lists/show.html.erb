<%= render 'shared/header' %>
<%# teams/show.cssに依存 %>
<div class="transition">
  <%= link_to "チーム", team_path(@team.id,@list), class:"user-path"%>
  >>リスト>>
</div>
<div class="team-wrap">
  <div class="team-name">
    <%= @list.list_name %>
  </div>
  <div class="team-member-top">
    <div class="team-member">リスト製作者</div>
    <%= @list.user.nickname %>
  </div>

  <div class="team-action">
    <div class="action-btn">
      <%= link_to 'リストの編集', edit_team_list_path(@team.id,@list.id), method: :get, class: "team-edit-btn" %>
      <p class='or-text'>OR</p>
      <%= link_to '削除', team_list_path(@team.id,@list.id), method: :delete, class:'team-destroy' %>
    </div>
  </div>
  <%= link_to '戻る', :back%>
</div>